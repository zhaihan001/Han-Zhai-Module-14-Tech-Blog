<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>Comments:</p>

  {{#if comments.length}}
  <div class="col-md-6 post-list">
    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <p>{{comment.comment}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <form class="form add-comment-form">
    <div class="form-group">
      <label for="post-comment">Add Comment here:</label>
      <textarea class="form-input" id="post-comment" name="post-comment"></textarea>
    </div>
    <p>
      <button type="submit" data-id="{{id}}" class="btn btn-primary">Leave a comment</button>
    </p>
  </form>
</div>

<script src="./js/addcomment.js"></script>